@page
@model LoginModel

@{
   
    ViewData["Title"] = "Login";
}


<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <form id="account" method="post">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Logowanie</h3></div>
                                <div class="card-body">

                                    <div class="form-group">
                                        <label class="small mb-1" asp-for="Input.Email">Email</label>
                                        <input class="form-control py-4" asp-for="Input.Email" placeholder="Podaj email" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="small mb-1" asp-for="Input.Password"></label>
                                        <input class="form-control py-4" asp-for="Input.Password" placeholder="Podaj hasło" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input class="custom-control-input" asp-for="Input.RememberMe" />
                                            <label class="custom-control-label" asp-for="Input.RememberMe">
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary">Zaloguj</button>

                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
