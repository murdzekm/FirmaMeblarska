@model FirmaMeblarska.Models.Zamowienie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Zamówienie</h1>

<div>
    <h4>Szczegóły</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NrFaktura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NrFaktura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataZlozenia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataZlozenia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cena) zł
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.Nazwa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Klient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Klient.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adres)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adres.FullAdres)
        </dd>
        <dt class="col-sm-2">
            Zespół
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Zespol.Nazwa)
        </dd>
    </dl>

    <div class="form-row">
        @if (User.IsInRole("Admin"))
        {
            <div class="form-group col-md-1">
                <a asp-action="Edit" asp-route-id="@Model.ZamowienieId" class="btn btn-primary">Edycja</a>
            </div>
        }
            <div class="form-group col-md-3">
                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>  Powrót do listy zamówień</a>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-2">
                <a asp-action="ShowInvoice" asp-route-id="@Model.ZamowienieId" class="btn btn-primary pull-right mt-3"><i class="fa fa-print"></i> Drukuj fakture</a>
            </div>

        </div>
        
    </div>
