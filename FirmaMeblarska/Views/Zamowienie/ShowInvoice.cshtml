@model FirmaMeblarska.Models.Zamowienie
@{
    ViewData["Title"] = "Zamówienie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <div class="col-xs-12 float-right">

        <a href="@Url.Action("PrintInvoice", new { id = Model.ZamowienieId })" target="_blank" class="btn btn-primary"><i class="fa fa-print"></i> Print</a>

    </div>
    <div class="col-sm-4 float-right">
        <b>Miejsce wystawienia:</b> Krosno<br>
        <b>Data wydania faktury:</b><br> @Model.DataZlozenia.ToString("dd-MMM-yyyy")<br><br><br><br>


    </div>
    <!-- Content Header (Page header) -->

    <section class="content-header">
        <h1>
            Faktura
            <small>@Model.NrFaktura </small>
        </h1>

    </section>
    <!--<div class="pad margin no-print">
        <div class="callout callout-info" style="margin-bottom: 0!important;">
            <h4><i class="fa fa-info"></i> Note:</h4>
            This page has been enhanced for printing. Click the print button at the bottom to print.
        </div>
    </div>-->
    <!-- Main content -->
    <section class="invoice">
        <!-- title row -->
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header">
                    <!--<i class="fa fa-globe"></i> Invoice:-->

                </h2>
            </div>
            <!-- /.col -->
        </div>
        <!-- info row -->
        <div class="row invoice-info">
            <div class="col-sm-6 invoice-col">
               
                <span class="border-bottom border-dark"> <b>Nabywca:</b></span>
                <address>
                    <strong>@Model.Klient.FullName</strong><br>
                    @Model.Klient.FullName<br>
                    @Model.Adres.FullAdres<br>
                    email: @Model.Klient.Email<br>
                    tel:@Model.Klient.Telefon<br>

                </address>
            </div>
            <!-- /.col -->
            <div class="col-sm-4 invoice-col">
                <span class="border-bottom border-dark"> <b>Sprzedwaca:</b></span>
                
                <address>
                    <strong>Firma Meblarska</strong><br>
                    Firma Meblarska<br>
                    Lotników 5 38-400 Krosno <br>
                    admin@firmameblarska.pl<br>

                </address>
            </div>
            <!-- /.col -->
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Table row -->
        <div class="row">
            <div class="col-xs-12 table-responsive">
                <table class="table table-striped">
                    <thead class="text-center">
                        <tr>
                            <th>Lp</th>
                            <th>Nazwa towaru/usługi</th>
                            <th>Ilość</th>
                            <th>Cena netto</th>
                            <th>VAT</th>
                            <th>Kwota VAT</th>
                            <th>Kwota brutto</th>
                        </tr>
                    </thead>
                    <tbody class="text-right">

                        <tr>
                            <td>1</td>
                            <td>Meble na wymiar</td>
                            <td>1</td>
                            <td>@Model.CenaNetto </td>
                            <td>23%</td>
                            <td>@Model.KwotaVat</td>
                            <td>@Model.Cena</td>
                        </tr>


                    </tbody>
                </table>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <div class="row float-right mt-3 ">


            <!-- /.col -->

            <div class=" col-xs-6">
                <table class="table table-bordered">
                    <thead class="bg-light">
                        <tr>
                            <th>Stawka VAT</th>
                            <th>Netto</th>
                            <th>VAT</th>
                            <th>Brutto</th>

                        </tr>
                    </thead>
                    <tbody class="text-right">

                        <tr>
                            <td>23%</td>
                            <td>@Model.CenaNetto </td>
                            <td>@Model.KwotaVat</td>
                            <td>@Model.Cena</td>
                        </tr>
                        <tr>
                            <td><strong>Razem</strong></td>
                            <td><strong>@Model.CenaNetto</strong></td>
                            <td><strong>@Model.KwotaVat</strong></td>
                            <td><strong>@Model.Cena</strong></td>
                        </tr>


                    </tbody>

                </table>
                <h5 class="mt-3 bg-light">Do zapłaty: @Model.Cena</h5>
            </div>
        </div>
        



        <!-- /.col -->
        <!-- /.row -->
        <!-- this row will not appear when printing -->

    </section>
    <!-- /.content -->
    <div class="clearfix"></div>
</div>
<!-- /.content-wrapper -->
