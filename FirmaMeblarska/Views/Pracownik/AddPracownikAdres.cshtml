@model FirmaMeblarska.ViewModels.AdresVW

@{
    ViewData["Title"] = "Pracownik";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pracownik</h1>
<h4>Nowy</h4>
<hr />

<form asp-action="AddPracownikAdres">
    <div class="row">
        <div class="col">
            <input type="hidden" asp-for="PracownikId" />
            <div class="form-group">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label"></label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>

        </div>
        <div class="col">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="AdresId" />
            <div class="form-group">
                <label asp-for="Miejscowosc" class="control-label"></label>
                <input asp-for="Miejscowosc" class="form-control" />
                <span asp-validation-for="Miejscowosc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ulica" class="control-label"></label>
                <input asp-for="Ulica" class="form-control" />
                <span asp-validation-for="Ulica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrDomu" class="control-label"></label>
                <input asp-for="NrDomu" class="form-control" />
                <span asp-validation-for="NrDomu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NrLokalu" class="control-label"></label>
                <input asp-for="NrLokalu" class="form-control" />
                <span asp-validation-for="NrLokalu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KodPocztowy" class="control-label"></label>
                <input asp-for="KodPocztowy" class="form-control" />
                <span asp-validation-for="KodPocztowy" class="text-danger"></span>
            </div>


        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group col-md-6">
                <input type="submit" value="Zapisz" class="btn btn-primary btn-block" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group col-md-6">
                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>  Powrót do listy pracowników</a>
            </div>
        </div>

    </div>
</form>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
