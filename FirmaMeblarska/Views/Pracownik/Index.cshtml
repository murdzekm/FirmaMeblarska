@model IEnumerable<FirmaMeblarska.Models.Pracownik>

@{
    ViewData["Title"] = "Pracownicy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pracownicy</h1>
<!--
<p>
    <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i>  Nowy pracownik</a>
</p>-->

<p>
    <a asp-action="AddPracownikAdres" class="btn btn-outline-success"><i class="far fa-plus-square"></i>  Nowy pracownik</a>
</p>
<div class="card mb-4">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered text-center" id="myTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Imie)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nazwisko)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefon)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.Adres)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Imie)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nazwisko)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefon)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Adress)
                            </td>
                            <td>
                                <a asp-action="AddOrEdit" asp-route-id="@item.PracownikId"><i class="fa fa-marker fa-lg"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.PracownikId" class="text-danger ml-1" onclick="return confirm('Czt na pewno chcesz usunąć tą część?')"><i class="fa fa-trash-alt fa-lg"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
</div>
</div>