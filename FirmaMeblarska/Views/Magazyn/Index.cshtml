@model IEnumerable<FirmaMeblarska.Models.Magazyn>

@{
    ViewData["Title"] = "Magazyn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Magazyn</h1>

<p>
    <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i>  Nowy przedmiot</a>
</p>
<div class="card mb-4">
    
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                
                    <thead>
                        <tr>
                            <th>
                                Akcje
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nazwa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ilosc)
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                <a asp-action="AddOrEdit" asp-route-id="@item.CzescId"><i class="fa fa-marker fa-lg"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.CzescId" class="text-danger ml-1" onclick="return confirm('Czt na pewno chcesz usunąć tą część?')"><i class="fa fa-trash-alt fa-lg"></i></a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nazwa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ilosc)
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
        </div>
    </div>
</div>
